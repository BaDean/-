page {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #ededed
}

.containers{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center
}

.top {
    min-height: 80rpx;
    position: fixed;
    border-radius: 40rpx;
    width: 90%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    background-color: #fff;
    z-index: 4;
    box-shadow: 3px 3px 4px #666;
    top: 25rpx
}

.classify {
    color: rgb(46, 46, 46);
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    width: 600rpx;
    font-size: 30rpx;
    font-weight: 600;
}

.card{
    margin-top: 40rpx;
    display: block
}

.list{
    margin-top: 90rpx
}
